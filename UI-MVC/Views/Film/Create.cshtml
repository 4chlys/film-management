@model FilmManagement.UI.Web.Models.Film.NewFilmViewModel

@{
    ViewBag.Title = "Create New Film";
}

<h2>Create New Film</h2>

<form asp-action="Create" method="post">
    <partial name="_FilmFillPartial" model="Model" />
    
    <partial name="_DirectorActorSelectorPartial" model="Model" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Film</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}