@model Film

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Genre</dt>
            <dd class="col-sm-9">@Model.Genre.ToString()</dd>

            <dt class="col-sm-3">Release Date</dt>
            <dd class="col-sm-9">@Model.ReleaseDate.ToString("MMM dd, yyyy")</dd>

            <dt class="col-sm-3">Rating</dt>
            <dd class="col-sm-9">@Model.Rating.ToString("F1") / 10</dd>

            <dt class="col-sm-3">Director</dt>
            <dd class="col-sm-9">@(Model.Director?.Name ?? "No director assigned")</dd>

            <dt class="col-sm-3">Actors</dt>
            <dd class="col-sm-9">
                @if (Model.ActorFilms != null && Model.ActorFilms.Any())
                {
                    <ul class="mb-0">
                        @foreach (var actorFilm in Model.ActorFilms)
                        {
                            <li>
                                @actorFilm.Actor.Name
                                @if (actorFilm.ScreenTime.HasValue)
                                {
                                    <span class="text-muted">(@actorFilm.ScreenTime min)</span>
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">No actors assigned</span>
                }
            </dd>
        </dl>
    </div>
</div>