@model IEnumerable<Film>

@{
    ViewBag.Title = "Films";
}

<h2>All Films</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Film</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Title</th>
        <th>Genre</th>
        <th>Release Date</th>
        <th>Rating</th>
        <th>Director</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var film in Model)
    {
        <tr>
            <td>@film.Title</td>
            <td>@film.Genre.ToString()</td>
            <td>@film.ReleaseDate.ToString("dd/MM/yyyy")</td>
            <td>@film.Rating.ToString("F1")</td>
            <td>@(film.Director?.Name ?? "unknown")</td>
            <td>
                <a asp-action="Details" asp-route-id="@film.ImdbId">Details</a>
                <a asp-action="Edit" asp-route-id="@film.ImdbId" class="btn btn-sm btn-warning mx-1">Edit</a>
                <a asp-action="Delete" asp-route-id="@film.ImdbId" class="btn btn-sm btn-danger mx-1">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>