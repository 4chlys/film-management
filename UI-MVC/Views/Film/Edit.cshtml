@model FilmManagement.UI.Web.Models.Film.EditFilmViewModel

@{
    ViewBag.Title = "Edit Film";
}

<h2>Edit Film</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ImdbId" />
    
    <partial name="_FilmFillPartial" model="Model" />
    
    <partial name="_DirectorActorSelectorPartial" model="Model" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Details" asp-route-id="@Model.ImdbId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}