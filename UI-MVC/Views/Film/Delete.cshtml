@model FilmManagement.UI.Web.Models.Film.DeleteFilmViewModel

@{
    ViewBag.Title = "Delete Film";
}

<h2>Delete Film</h2>
<h3 class="text-danger">Are you sure you want to delete this film?</h3>

<partial name="_FilmDetailsPartial" model="Model" />

<form asp-action="DeletePost" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.ImdbId" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Details" asp-route-id="@Model.ImdbId" class="btn btn-secondary">Cancel</a>
</form>