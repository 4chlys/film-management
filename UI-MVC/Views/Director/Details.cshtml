@model Director

@{
    ViewBag.Title = $"{Model.Name} - Director Details";
}

<h2>Director Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Country</dt>
            <dd class="col-sm-9">@Model.Country</dd>

            <dt class="col-sm-3">Career Start</dt>
            <dd class="col-sm-9">@(Model.CareerStart?.ToString() ?? "unknown")</dd>

            <dt class="col-sm-3">Career End</dt>
            <dd class="col-sm-9">@(Model.CareerEnd?.ToString() ?? "Still active")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Film" asp-action="Index" class="btn btn-secondary">Back to Films</a>
</div>